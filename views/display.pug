extends layout

block append stylesheets
  link(rel='stylesheet', href='/stylesheets/display.css')

block content 
  header(class="w3-container w3-padding w3-teal bg-header")
    div(class="w3-center")
      div(class="ripple-background")
        div(class="w3-xlarge") Cerdas Cermat
          br
          | Semarak Ramadhan 1444H
          br
          | Remaja Masjid Nurul-Falah Hutuo
  
  div(class="w3-container w3-center w3-black")
    div(id="stage", class="w3-xxlarge") Persiapan
  
  div(class="w3-row-padding w3-center w3-margin-top")
    - var color = ['orange', 'indigo', 'cyan', 'purple']
    - for (var i=0; i<4; i++)
      div(class="w3-quarter")
        div(id="team_"+String.fromCharCode(97+i), class="w3-card w3-display-container w3-text-"+color[i]+" w3-hide", style="min-height:392px")
          div(class="w3-display-topmiddle")
            div(class="w3-xxlarge") Regu
            div(style="font-size:96px") #{String.fromCharCode(65+i)}
          div(class="w3-display-middle")
            i(id="mark_"+String.fromCharCode(97+i), style="font-size:120px")
          div(class="w3-display-bottommiddle")
            div(class="w3-xxlarge") Score
            div(id="score_tot_"+String.fromCharCode(97+i), class="w3-xxxlarge") 0

block append scripts
  script(type='text/javascript', src='/javascripts/display.js')
